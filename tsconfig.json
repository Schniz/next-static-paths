{
  "compilerOptions": {
    "target": "es2019",
    "lib": ["esnext"],
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "allowJs": true
  },
  "include": [
    "root.d.ts",
    "src/**/*.ts",
    "scripts/**/*.ts",
    "test/**/*.ts",
    "cli/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
